<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<%- include('../partials/scripts.ejs') %>

<body>
    <div class="container " style=" margin: 5% auto 0 auto;">

        <div class="row justify-content-md-center">
            <div class="col-10">



                <h1 class="display-4 mb-5 text-center">Descubra o menor caminho até o seu destino!</h1>

                <form>
                    <div class="form-row">
                        <div class="form-group col-lg-9">
                            <label for="city" class="mb-0">Cidade:</label>
                            <input type="text" class="form-control" id="city" placeholder="Cidade" aria-label="Cidade">
                        </div>
                        <div class="col-lg-3 text-right mt-4">
                            <button type="button" class="btn  btn-block btn-dark"
                                onclick="addCity(document.getElementById('city').value)">Adicionar</button>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-lg-3">
                            <label for="originCity " class="mb-0">Origem:</label>
                            <select class="form-control" id="originCity" placeholder="Origem">
                                <option disabled='' selected=''>Origem</option>
                            </select>
                        </div>
                        <div class="form-group col-lg-3">
                            <label for="destinationCity" class="mb-0">Destino:</label>
                            <select class="form-control " id="destinationCity" placeholder="Destino">
                                <option disabled='' selected=''>Destino</option>

                            </select>
                        </div>
                        <div class="form-group  col-lg-3">
                            <label for="distance" class="mb-0">Distância entre cidades:</label>
                            <input type="number" min="0" class="form-control" id="distance" placeholder="Distância">
                        </div>
                        <div class="col-3 text-right mt-4">
                            <button type="button" class="btn  btn-block btn-dark"
                                onclick="teste(document.getElementById('city').value)">Adicionar</button>
                        </div>

                    </div>

                </form>
                <div class="pt-5">
                    <button type="button" class="btn  btn-lg btn-block btn-dark">Buscar</button>
                </div>

            </div>
        </div>
    </div>

    <script src="Index.js"></script>

</body>
<%- include('../partials/footer.ejs') %>
</html>